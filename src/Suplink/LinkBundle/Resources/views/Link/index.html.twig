<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Originalurl</th>
            <th>Tinyurl</th>
            <th>Datecreated</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('link_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td><a href="http://{{ entity.originalUrl }} ">http://{{ entity.originalUrl }}</a></td>
            <td><a href="{{ url('suplink_home_homepage') }}{{ entity.tinyUrl }}">{{ url('suplink_home_homepage') }}{{ entity.tinyUrl }}</a></td>
            <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d') }}{% endif %}</td>
            <td>
                {% if entity.active == 1 %}
                En Ligne
                {% else %}
                Hors Ligne
                {% endif %}
            </td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('link_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('link_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>